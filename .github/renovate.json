{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "docker-compose",
    "dockerfile"
  ],
  "docker-compose": {
    "managerFilePatterns": [
      "/(^|/)docker-compose\\.(ya?ml)$/"
    ]
  },
  "dockerfile": {
    "managerFilePatterns": [
      "/(^|/)Dockerfile$/",
      "/(^|/)Dockerfile\\.[^/]*$/"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "docker-compose",
        "dockerfile"
      ],
      "groupName": "all-docker-images",
      "groupSlug": "docker-images",
      "automerge": false
    }
  ],
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10
}
