# MQTT Configuration
# Copy this file to .env and set your actual values

# MQTT Username (optional, defaults to 'mqttuser')
MQTT_USERNAME=mqttuser

# MQTT Password (required for security)
MQTT_PASSWORD=your_secure_password_here

# Zigbee Adapter Device (optional, defaults to '/dev/ttyACM0')
# Common alternatives: /dev/ttyUSB0, /dev/ttyUSB1, /dev/ttyAMA0
ZIGBEE_DEVICE=/dev/ttyACM0